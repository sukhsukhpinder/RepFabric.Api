{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ExcelUpload": {
    "AllowedExtensions": [ ".xlsx", ".xlsm" ],
    "AllowedMimeTypes": [
      "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet", // For .xlsx files without macros
      "application/vnd.ms-excel.sheet.macroEnabled.12" // For .xlsm files with macros
    ],
    "MaxFileSize": 5242880 // 5 MB in bytes
  }
}
